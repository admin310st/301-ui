<!-- Connect Cloudflare Drawer -->
    <aside class="drawer" data-drawer="connect-cloudflare" hidden>
      <div class="drawer__overlay" data-drawer-close></div>
      <div class="drawer__panel">
        <header class="drawer__header">
          <div class="drawer__title">
            <span class="icon" data-icon="brand/cloudflare" style="color: var(--cf-orange);"></span>
            <h2 class="h4">Connect Cloudflare</h2>
          </div>
          <button class="btn-close" type="button" data-drawer-close aria-label="Close">
            <span class="icon" data-icon="mono/close"></span>
          </button>
        </header>

        <div class="drawer__body">
          <div class="tabs">
            <!-- Tabs Navigation -->
            <div class="tabs__nav" role="tablist">
              <button
                class="tabs__trigger is-active"
                role="tab"
                aria-selected="true"
                data-tab-trigger="instructions"
              >
                <span class="icon" data-icon="mono/help-circle"></span>
                <span>Instructions</span>
              </button>
              <button
                class="tabs__trigger"
                role="tab"
                aria-selected="false"
                data-tab-trigger="connect"
              >
                <span class="icon" data-icon="mono/puzzle-plus"></span>
                <span>Connect</span>
              </button>
            </div>

            <!-- Tab Panels -->
            <div class="tabs__panels">
              <!-- Instructions Tab -->
              <div class="tabs__panel is-active" data-tab-panel="instructions" role="tabpanel">
                <div class="stack-list">
                  <div class="card card--panel">
                    <header class="card__header">
                      <h3 class="h5">Creating Bootstrap Token</h3>
                    </header>
                    <div class="card__body">
                      <div class="step-list">
                        <div class="step-item">
                          <span class="badge badge--neutral">1</span>
                          <span>Go to <a href="https://dash.cloudflare.com" target="_blank" rel="noopener">Cloudflare Dashboard</a> → <strong>Manage account → Account API tokens</strong></span>
                        </div>
                        <div class="step-item">
                          <span class="badge badge--neutral">2</span>
                          <span>Click <strong>Get started</strong> (Create Custom Token)</span>
                        </div>
                        <div class="step-item">
                          <span class="badge badge--neutral">3</span>
                          <span>Set <strong>Token name:</strong> <code>301.st Bootstrap</code></span>
                        </div>
                        <div class="step-item">
                          <span class="badge badge--neutral">4</span>
                          <span>
                            <strong>Permissions:</strong> Add two rows:
                            <ul class="list--spaced" style="margin-top: var(--space-2);">
                              <li><code>Account</code> → <code>Account Settings</code> → <strong>Read</strong></li>
                              <li><code>Account</code> → <code>API Tokens</code> → <strong>Edit</strong></li>
                            </ul>
                          </span>
                        </div>
                        <div class="step-item">
                          <span class="badge badge--neutral">5</span>
                          <span>Click <strong>Continue to summary</strong> → <strong>Create Token</strong></span>
                        </div>
                        <div class="step-item">
                          <span class="badge badge--success">6</span>
                          <span>Copy the entire <strong>Test this token</strong> curl command or just the token</span>
                        </div>
                      </div>
                    </div>
                  </div>

                  <div class="panel panel--success">
                    <p>
                      <span class="icon" data-icon="mono/lightbulb-alert"></span>
                      <strong>Pro tip:</strong> Paste the entire <code>curl</code> command from Cloudflare into the <strong>Bootstrap API token</strong> field. We'll auto-extract both Account ID and token.
                    </p>
                  </div>
                </div>
              </div>

              <!-- Connect Tab -->
              <div class="tabs__panel" data-tab-panel="connect" role="tabpanel">
                <form id="cf-connect" class="stack-list" data-form="cf-connect">
                  <div class="field">
                    <label class="field__label">Cloudflare Account ID</label>
                    <input
                      class="input"
                      type="text"
                      name="cf_account_id"
                      placeholder="e.g. 1234567890abcdef1234567890abcdef"
                      autocomplete="off"
                      spellcheck="false"
                      required
                    />
                    <p class="field__hint text-muted">
                      Found in Cloudflare dashboard: <strong>Overview → Account ID</strong>
                    </p>
                  </div>

                  <div class="field">
                    <label class="field__label">Bootstrap API Token</label>
                    <textarea
                      class="textarea"
                      name="cf_bootstrap_token"
                      rows="4"
                      placeholder="Paste token with 'Account API Tokens: Edit' scope…"
                      autocomplete="off"
                      spellcheck="false"
                      required
                    ></textarea>
                    <p class="field__hint text-muted">
                      Created as <code>301st Bootstrap</code> with <strong>Account Settings: Read</strong> and <strong>API Tokens: Edit</strong> permissions.
                    </p>
                  </div>

                  <div class="panel panel--success">
                    <p>
                      <span class="icon" data-icon="mono/lightbulb-alert"></span>
                      <strong>Pro tip:</strong> Paste the entire <code>curl</code> command from <strong>Test this token</strong> section, and we'll auto-extract both fields.
                    </p>
                  </div>

                  <div class="panel" data-cf-status hidden role="status" aria-live="polite"></div>
                </form>
              </div>
            </div>
          </div>
        </div>

        <footer class="drawer__footer">
          <button class="btn btn--ghost" type="button" data-drawer-close>Cancel</button>

          <!-- Instructions tab action -->
          <button type="button" class="btn btn--primary" data-tab-trigger="connect" data-footer-action="instructions">
            <span class="icon" data-icon="mono/play"></span>
            <span>Start setup</span>
          </button>

          <!-- Connect form action -->
          <button type="submit" form="cf-connect" class="btn btn--cf" data-footer-action="connect" hidden>
            <span class="icon" data-icon="brand/cloudflare"></span>
            <span>Save &amp; verify token</span>
          </button>
        </footer>
      </div>
    </aside>
