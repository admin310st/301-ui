<!-- Connect NameCheap Drawer -->
    <aside class="drawer" data-drawer="connect-namecheap" hidden>
      <div class="drawer__overlay" data-drawer-close></div>
      <div class="drawer__panel">
        <header class="drawer__header">
          <div class="drawer__title">
            <span class="icon" data-icon="brand/namecheap"></span>
            <h2 class="h4">Connect NameCheap</h2>
          </div>
          <button class="btn-close" type="button" data-drawer-close aria-label="Close">
            <span class="icon" data-icon="mono/close"></span>
          </button>
        </header>

        <div class="drawer__body">
          <div class="tabs">
            <!-- Tabs Navigation -->
            <div class="tabs__nav" role="tablist">
              <button
                class="tabs__trigger is-active"
                role="tab"
                aria-selected="true"
                data-tab-trigger="nc-instructions"
              >
                <span class="icon" data-icon="mono/help-circle"></span>
                <span>Instructions</span>
              </button>
              <button
                class="tabs__trigger"
                role="tab"
                aria-selected="false"
                data-tab-trigger="nc-connect"
              >
                <span class="icon" data-icon="mono/puzzle-plus"></span>
                <span>Connect</span>
              </button>
            </div>

            <!-- Tab Panels -->
            <div class="tabs__panels">
              <!-- Instructions Tab -->
              <div class="tabs__panel is-active" data-tab-panel="nc-instructions" role="tabpanel">
                <div class="stack-list">
                  <div class="card card--panel">
                    <header class="card__header">
                      <h3 class="h5">Getting your NameCheap API Key</h3>
                    </header>
                    <div class="card__body">
                      <div class="step-list">
                        <div class="step-item">
                          <span class="badge badge--neutral">1</span>
                          <span>Go to <a href="https://ap.www.namecheap.com/settings/tools/apiaccess/" target="_blank" rel="noopener">NameCheap API Settings</a></span>
                        </div>
                        <div class="step-item">
                          <span class="badge badge--neutral">2</span>
                          <span>Enable <strong>API Access</strong> if not already enabled</span>
                        </div>
                        <div class="step-item">
                          <span class="badge badge--info">3</span>
                          <span>
                            Add these IPs to <strong>Whitelisted IPs</strong>:
                            <span data-nc-proxy-ips class="text-muted">loading...</span>
                          </span>
                        </div>
                        <div class="step-item">
                          <span class="badge badge--neutral">4</span>
                          <span>Copy your <strong>API Key</strong> from the page</span>
                        </div>
                      </div>
                    </div>
                  </div>

                  <div class="panel panel--info">
                    <p>
                      <span class="icon" data-icon="mono/info"></span>
                      <strong>Note:</strong> NameCheap requires IP whitelisting for API access. Step 3 shows the IPs you need to add to your Namecheap settings before connecting.
                    </p>
                  </div>
                </div>
              </div>

              <!-- Connect Tab -->
              <div class="tabs__panel" data-tab-panel="nc-connect" role="tabpanel">
                <form id="nc-connect-form" class="stack-list" data-form="nc-connect">
                  <div class="field">
                    <label class="field__label">NameCheap Username</label>
                    <input
                      class="input"
                      type="text"
                      name="username"
                      placeholder="your-username"
                      autocomplete="off"
                      spellcheck="false"
                      required
                    />
                    <p class="field__hint text-muted">
                      Your NameCheap account username.
                    </p>
                  </div>

                  <div class="field">
                    <label class="field__label">API Key</label>
                    <input
                      class="input"
                      type="text"
                      name="api_key"
                      placeholder="Paste your NameCheap API Key…"
                      autocomplete="off"
                      spellcheck="false"
                      required
                    />
                    <p class="field__hint text-muted">
                      Found in NameCheap dashboard: <strong>Profile → Tools → API Access</strong>
                    </p>
                  </div>

                  <div class="field">
                    <label class="field__label">Alias (optional)</label>
                    <input
                      class="input"
                      type="text"
                      name="key_alias"
                      placeholder="e.g. My NameCheap Account"
                      autocomplete="off"
                      maxlength="100"
                    />
                    <p class="field__hint text-muted">
                      A friendly name to identify this integration.
                    </p>
                  </div>

                  <!-- Status Panel (for errors/success) -->
                  <div class="panel" data-nc-status hidden role="status" aria-live="polite"></div>
                </form>
              </div>
            </div>
          </div>
        </div>

        <footer class="drawer__footer">
          <button class="btn btn--ghost" type="button" data-drawer-close>Cancel</button>

          <!-- Instructions tab action -->
          <button type="button" class="btn btn--primary" data-tab-trigger="nc-connect" data-footer-action="nc-instructions">
            <span class="icon" data-icon="mono/play"></span>
            <span>Start setup</span>
          </button>

          <!-- Connect form action -->
          <button type="submit" form="nc-connect-form" class="btn btn--primary" data-footer-action="nc-connect" hidden>
            <span class="icon" data-icon="brand/namecheap"></span>
            <span>Connect NameCheap</span>
          </button>
        </footer>
      </div>
    </aside>
