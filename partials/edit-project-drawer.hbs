<!-- Edit Project Drawer -->
    <aside class="drawer" data-drawer="edit-project" hidden>
      <div class="drawer__overlay" data-drawer-close></div>
      <div class="drawer__panel">
        <header class="drawer__header">
          <div class="drawer__title">
            <span class="icon" data-icon="mono/pencil-circle"></span>
            <h2 class="h4">Edit Project</h2>
          </div>
          <button class="btn-close" type="button" data-drawer-close aria-label="Close">
            <span class="icon" data-icon="mono/close"></span>
          </button>
        </header>

        <div class="drawer__body">
          <div class="stack-list">
            <p class="text-muted">Update project details, dates and commercial terms</p>

            <!-- Project Edit Form -->
            <form id="edit-project-form" class="stack-md" data-form="edit-project">
              <input type="hidden" name="project_id" data-project-id />

              <div class="field">
                <label class="field__label">
                  <span>Project name</span>
                  <span class="field__required">*</span>
                </label>
                <input
                  class="input"
                  type="text"
                  name="project_name"
                  placeholder="Black Friday 2025"
                  autocomplete="off"
                  required
                />
              </div>

              <div class="field">
                <label class="field__label">Description</label>
                <textarea
                  class="input"
                  name="description"
                  rows="3"
                  placeholder="Optional project description"
                  autocomplete="off"
                ></textarea>
              </div>

              <div class="field">
                <label class="field__label">Brand tag</label>
                <input
                  class="input"
                  type="text"
                  name="brand_tag"
                  placeholder="e.g., brand-2025"
                  autocomplete="off"
                />
              </div>

              <div class="field">
                <label class="field__label">Commercial terms</label>
                <input
                  class="input"
                  type="text"
                  name="commercial_terms"
                  placeholder="e.g., CPA $5 or RevShare 30%"
                  autocomplete="off"
                />
              </div>

              <div class="field-group">
                <div class="field">
                  <label class="field__label">Start date</label>
                  <input
                    class="input"
                    type="date"
                    name="start_date"
                    autocomplete="off"
                  />
                </div>
                <div class="field">
                  <label class="field__label">End date</label>
                  <input
                    class="input"
                    type="date"
                    name="end_date"
                    autocomplete="off"
                  />
                </div>
              </div>

              <!-- Status Panel (for errors/success) -->
              <div class="panel" data-edit-project-status hidden role="status" aria-live="polite"></div>
            </form>
          </div>
        </div>

        <footer class="drawer__footer">
          <button class="btn btn--ghost" type="button" data-drawer-close>Cancel</button>
          <button type="submit" form="edit-project-form" class="btn btn--primary">
            <span class="icon" data-icon="mono/check"></span>
            <span>Save changes</span>
          </button>
        </footer>
      </div>
    </aside>
